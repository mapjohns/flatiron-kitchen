<h1>Update <%= @recipe.name %></h1>
<%= form_for @recipe do |f| %>

    <%= f.label "Recipe Name" %>
    <%= f.text_field :name %><br><br>

    <%= f.fields_for :ingredients, @recipe.ingredients.build() do |ing_fields| %>

        <%= ing_fields.label "Ingredient" %>
        <%= ing_fields.text_field :name %>
    <% end %>
    <br><br>
    
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br><br>
    <%= f.submit %>
<% end %>